@using Makale.Entities.ViewModel
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<link href="~/Content/Login_CSS.css" rel="stylesheet" />
<link href="~/Content/validation-summary-css.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Register Form </h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adını giriniz" })
                        @*@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })   hatayı hemen altına yazdırır.*@
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email adresini giriniz" })
                        
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre giriniz", type="password" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password2, new { @class = "form-control", placeholder = "Şifre tekrar giriniz", type = "password" })

                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Register</button>

                    </div>
                </div>
            </div>
        </div>
    </section>
}


