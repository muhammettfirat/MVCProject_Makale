@using Makale.Entities
@model Note
<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">
            @Model.Title
        </h3>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <span class="glyphicon glyphicon-user"></span>@Model.Kullanici.Username <br />
        <span class="glyphicon glyphicon-time"></span>@Model.ModifiedDate.ToString("dd.MM.yy HH:mm")
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        @Model.Text
    </div>

</div>


